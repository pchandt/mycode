#!/usr/bin/env python3
# initialize variable named round with the value of 0
round = 0

# sets up infinite while loop condition
while True:
    
    # increase the round counter
    round = round + 1

    # print the quiz
    print('Finish the movie title, "Monty Python\'s The Life of ______"')

    # collect string answer from user
    answer = input("Your guess--> ")

    # logic to check if user gave correct answer
    if answer == 'Brian':
        print('Correct!')
        # break statement escapes the while loop
        break

    # condition to make sure round has not yet reached 3
    elif round == 3:
        print('Sorry, the answer was Brian.')
        break
    # if answer was wrong, and round is not yet equal to 3
    else:
        print('Sorry. Try again!')



